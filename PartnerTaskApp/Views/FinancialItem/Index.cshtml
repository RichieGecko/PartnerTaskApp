@model IEnumerable<PartnerTaskApp.Models.ViewModels.FinancialItemViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Financial Items</h1>

<p>
    <a asp-action="Create">Create New Item</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FinancialItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FinancialItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PartnerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.FinancialItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.FinancialItemId })
            </td>
        </tr>
}
    </tbody>
</table>
<div class="row">
    <div class="col-3"></div>
    <div class="col-3">
        <div class="form-group">
        <a asp-controller="FinancialItem" asp-action="DeleteAll">
            <input type="button" value="Delete all item"/>
        </a>
        </div>
    </div>
    <div class="col-3">
        <div class="form-group">
        <a asp-controller="Calculation" asp-action="Index">
            <input type="button" value="Calculate data" />
        </a>
        </div>
    </div>
    <div class="col-3"></div>
    
</div>
